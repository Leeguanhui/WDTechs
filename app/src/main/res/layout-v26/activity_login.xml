<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".activity.LoginActivity">

    <RelativeLayout
        android:id="@+id/RL_01"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="190dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/ICON_Name"
            android:layout_width="17dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_icon_phone_n"
            android:contentDescription="TODO" />

        <EditText
            android:id="@+id/mEt_Phone_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ICON_Name"
            android:background="@null"
            android:hint="手机号"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="16sp"
            android:autofillHints=""
            android:inputType=""
            android:layout_marginStart="20dp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/RL_01"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="#fff" />


    <RelativeLayout
        android:id="@+id/RL_02"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/RL_01"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="40dp">

        <ImageView
            android:id="@+id/ICON_Phone"
            android:layout_width="19dp"
            android:layout_height="27dp"
            android:layout_centerVertical="true"
            android:src="@drawable/login_icon_lock_n" />

        <EditText
            android:id="@+id/mEd_Pwd_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/ICON_Phone"
            android:background="@null"
            android:hint="登录密码"
            android:inputType="textPassword"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="16sp"
            android:layout_marginStart="20dp" />

        <ImageView
            android:id="@+id/mI"
            android:layout_width="22dp"
            android:layout_height="13dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/login_icon_eye_n" />

    </RelativeLayout>


    <View
        android:id="@+id/View_02"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/RL_02"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:background="#fff"></View>


    <TextView
        android:id="@+id/mTv_Reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/View_02"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="40dp"
        android:text="快速注册"
        android:textColor="#fff"
        android:textSize="14sp" />

    <Button
        android:id="@+id/mBt_Login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/shape_login"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="80dp"
        android:gravity="center"
        android:orientation="horizontal">
        <!--画左边的那条线-->
        <View
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="第三方账号快速登录"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
        <!--画右边的那条线-->
        <View
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <ImageView
        android:id="@+id/mIv_Wx_Login"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/common_icon_weixin_n" />

    <ImageView
        android:id="@+id/mIv_ZFB_Login"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="140dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/login_icon_artificialintelligence_n" />
</RelativeLayout>