<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFF"
     >
     <ImageView
         android:id="@+id/you"
         android:layout_width="24dp"
         android:layout_marginTop="10dp"
         android:layout_height="24dp"
         android:layout_marginLeft="10dp"
         android:src="@drawable/addfriends"/>
    <ImageView
        android:id="@+id/qun"
        android:layout_below="@id/you"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/creategroup"/>
    <TextView
        android:id="@+id/text_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加好友或群"
        android:textSize="14sp"
        android:layout_toRightOf="@id/you"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:textColor="#333333"/>

    <TextView
        android:id="@+id/text_qun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建群聊"
        android:textSize="14sp"
        android:layout_marginRight="12dp"
        android:layout_below="@id/text_you"
        android:layout_toRightOf="@id/qun"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="#333333"/>
</RelativeLayout>