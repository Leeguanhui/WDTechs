<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CFCECE">


    <LinearLayout
        android:id="@+id/aaaaaaaaa"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/you"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/addfriends" />

        <TextView
            android:id="@+id/text_you"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/you"
            android:layout_marginLeft="10dp"
            android:text="加好友或群"
            android:textColor="#333333"
            android:layout_marginRight="12dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bbbbbbbbbb"
        android:layout_width="wrap_content"
        android:layout_below="@id/aaaaaaaaa"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/qun"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_below="@id/you"
            android:src="@drawable/creategroup" />

        <TextView
            android:id="@+id/text_qun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_you"
            android:layout_marginRight="12dp"
            android:text="创建群聊"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>


</RelativeLayout>