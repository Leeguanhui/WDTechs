<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="256dp"
        android:src="@mipmap/haoyoubg" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_head"
        android:layout_width="77dp"
        android:layout_height="77dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="193dp"
        android:src="@mipmap/haoyoutouxiang"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/user_niname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="206dp"
        android:layout_toRightOf="@id/image_head"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="昵称"
        android:maxLength="3"
        android:maxEms="3"
        android:textColor="#666666"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/user_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="215dp"
        android:layout_toRightOf="@id/user_niname"
        android:gravity="center"
        android:text="(120积分)"
        android:textColor="#ff5552"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/vip"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/user_integral"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/image_head"
        android:src="@drawable/vipimage" />

    <TextView
        android:id="@+id/user_qianmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="286dp"
        android:text="世上本无事"
        android:textColor="#999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/aaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:text="- - - - - - - - -个人资料- - - - - - - - -"
        android:textColor="#333333"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/aaa"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="女"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/user_riqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/user_sex"
            android:text=""
            android:textColor="#333333"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/user_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp"
        android:text="13255566666"
        android:textColor="#333333"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/user_youxiang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=""
        android:textColor="#333333"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_r_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/qun_te_selector"
        android:text="添加为好友"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_r_message"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/qun_te_selector"
        android:text="发信息"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:visibility="gone" />
</RelativeLayout>