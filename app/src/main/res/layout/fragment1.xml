<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/aaaaa"
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="52dp">
        <EditText
            android:id="@+id/fragment1_search_edit"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:paddingLeft="44dp"
            android:textSize="12sp"
            android:hint="搜索"
            android:layout_marginLeft="12dp"
            android:background="@drawable/edtext_selector"/>

        <ImageView
            android:id="@+id/search_image"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/search_edit"
            android:padding="5dp"
            android:src="@mipmap/search" />
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/ccc"
        android:layout_below="@id/aaaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#20affa"
            android:text="搜索无结果"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bbb"
        android:visibility="gone"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aaaaa"
        android:layout_marginTop="4dp"
        android:padding="5dp"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@mipmap/icon" />
        <TextView
            android:id="@+id/you_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:text="xiaohong"/>
         <ImageView
             android:id="@+id/next"
             android:layout_width="24dp"
             android:layout_height="24dp"
             android:layout_marginRight="12dp"
             android:layout_margin="8dp"
             android:layout_alignParentRight="true"
             android:src="@mipmap/my_icon_next"/>
    </RelativeLayout>

</RelativeLayout>