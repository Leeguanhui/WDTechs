<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!--<TextView-->
        <!--android:id="@+id/mCommunity_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="#666666"-->
        <!--android:textSize="12sp"-->
        <!--android:text="特里退役:我的心永远属于切尔西。"-->
        <!--android:layout_marginTop="10dp"-->
        <!--/>-->

        <TextView
            android:id="@+id/item_post_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="12dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="前切尔西和英格兰队长雨涵.特里今晨通过社交媒体宣布37岁的他结束职业足球云运动员生涯。退役后，特里希望成为一名教练"
            android:textColor="#666666"
            android:textSize="12sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_post_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            app:roundedCornerRadius="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_post_textviewtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30分钟前"
                android:textColor="#999999"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_post_textviewdelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="删除"
                android:textColor="#20affa"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/mCommunity_zan"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/common_icon" />

            <TextView
                android:id="@+id/item_post_textviewnumberone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="10dp"
                android:text="455"
                android:textColor="#666666"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/mCommunity_comment_zan_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView

                    android:id="@+id/mCommunity_discuss"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/common_icon_comment"
                    android:button="@null" />

                <TextView
                    android:id="@+id/item_post_textviewnumbertwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="455"
                    android:textColor="#666666"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#dddddd" />
    </LinearLayout>
</RelativeLayout>