<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".activity.secondactivity.UpdateMessageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F0F0F0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人设置" />

        <ImageView
            android:id="@+id/back_bnt"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/common_icon_back_n" />

        <TextView
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="完成"
            android:textColor="#666666"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shadow_shape"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="25dp">

        <LinearLayout
            android:id="@+id/line0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/header_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头像"
                android:textColor="#333333"
                android:textSize="14sp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/my_herad"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@null"
                android:gravity="right"
                app:roundAsCircle="true"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/view0"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/line0"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D0D0D0D0" />

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/view0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/my_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/line"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D0D0D0D0" />


        <LinearLayout
            android:id="@+id/my_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/view1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sex_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="性别"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:background="@null"
                android:textColor="#666666"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/my_lin"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D0D0D0D0" />


        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/view2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sign_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="签名"
                android:textColor="#333333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/my_go_sign"
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_below="@+id/view3"
                android:layout_alignParentRight="true"
                android:src="@drawable/my_icon_next_n" />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/line1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D0D0D0D0" />

        <LinearLayout
            android:id="@id/line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/view3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/brith_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="出生日期"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/my_brith"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/line2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D0D0D0D0" />

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mail_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/my_mali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>