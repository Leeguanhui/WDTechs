<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".activity.secondactivity.UpdateMessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_bnt"
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:layout_marginLeft="25dp"
            android:src="@drawable/common_icon_back_n" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="完善个人信息"
            android:textColor="#666666"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/ok_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="#666666"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shadow_shape"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="25dp">

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵称"
            android:textColor="#333333"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/my_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="年"
            android:textSize="14sp" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/name_text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D0D0D0D0" />

        <TextView
            android:id="@+id/sex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:text="性别"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/my_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="男"
            android:textSize="14sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/sex_text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D0D0D0D0" />


        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sign_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="签名"
                android:textColor="#333333"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/my_go_sign"
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_below="@+id/view3"
                android:layout_alignParentRight="true"
                android:src="@drawable/my_icon_next_n" />
        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/line1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D0D0D0D0" />

        <TextView
            android:id="@+id/brith_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view3"
            android:text="出生日期"
            android:textColor="#333333"
            android:textSize="14sp" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/brith_text"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#D0D0D0D0" />

        <TextView
            android:id="@+id/mail_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view4"
            android:text="邮箱"
            android:textColor="#333333"
            android:textSize="14sp" />

    </RelativeLayout>
</LinearLayout>